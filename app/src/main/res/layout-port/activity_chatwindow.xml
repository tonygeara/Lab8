<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tony.androidlabs.Chatwindow">

    <ListView
        android:id="@+id/ChatView"
        android:layout_width="300dp"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <!--android:layout_above="@+id/send"-->
    <!--android:layout_alignParentEnd="true"-->

    <EditText
        android:id="@+id/editText"
        android:layout_width="8dp"

        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ChatView"
        android:layout_alignParentStart="true"
        android:inputType="text"
        tools:layout_toStartOf="@+id/send" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/ChatView"
        android:text="SEND"
        tools:text="SEND" />


<FrameLayout
    android:id="@+id/fragment_message_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_toEndOf="@+id/ChatView"
  >

</FrameLayout>


</RelativeLayout>
