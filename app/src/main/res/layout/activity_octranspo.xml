<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tony.androidlabs.Chatwindow">


    <ListView
        android:id="@+id/OCListView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="142dp" />

    <EditText
        android:id="@+id/OCeditText"
        android:layout_width="192dp"

        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:inputType="text"
        tools:layout_toLeftOf="@+id/send" />

    <Button
        android:id="@+id/OCsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/OCeditText"
        android:layout_marginStart="50dp"
        android:text="@string/Destination"
        tools:text="DESTINATION" />

